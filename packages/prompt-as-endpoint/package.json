{
  "name": "prompt-as-endpoint",
  "version": "1.0.1",
  "description": "Simple helper library for making HTTP endpoints that use LLMs to return schema-validated JSON responses.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prettier:check": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint"
  },
  "keywords": [
    "typescript",
    "llm",
    "http",
    "endpoint",
    "json",
    "schema",
    "validation"
  ],
  "author": "Yaqin Hasan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yaq1n0/prompt-as-endpoint.git",
    "directory": "packages/prompt-as-endpoint"
  },
  "bugs": {
    "url": "https://github.com/yaq1n0/prompt-as-endpoint/issues"
  },
  "homepage": "https://github.com/yaq1n0/prompt-as-endpoint#readme",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "zod": "^4.1.11"
  }
}
